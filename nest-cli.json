{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "lithosgem": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "blog": {
      "type": "application",
      "root": "apps/blog",
      "entryFile": "main",
      "sourceRoot": "apps/blog/src",
      "compilerOptions": {
        "tsConfigPath": "apps/blog/tsconfig.app.json"
      }
    },
    "blog-micro": {
      "type": "application",
      "root": "apps/blog-micro",
      "entryFile": "main",
      "sourceRoot": "apps/blog-micro/src",
      "compilerOptions": {
        "tsConfigPath": "apps/blog-micro/tsconfig.app.json"
      }
    },
    "interface": {
      "type": "library",
      "root": "libs/interface",
      "entryFile": "index",
      "sourceRoot": "libs/interface/src",
      "compilerOptions": {
        "tsConfigPath": "libs/interface/tsconfig.lib.json"
      }
    },
    "schema": {
      "type": "library",
      "root": "libs/schema",
      "entryFile": "index",
      "sourceRoot": "libs/schema/src",
      "compilerOptions": {
        "tsConfigPath": "libs/schema/tsconfig.lib.json"
      }
    },
    "content-micro": {
      "type": "application",
      "root": "apps/content-micro",
      "entryFile": "main",
      "sourceRoot": "apps/content-micro/src",
      "compilerOptions": {
        "tsConfigPath": "apps/content-micro/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway"
}